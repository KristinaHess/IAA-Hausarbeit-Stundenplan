<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
  "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
  <package name="default" extends="tiles-default">
    <action name="addRoom">
      <result type="tiles">roomForm</result>
    </action>
    <action name="saveLecture" class="de.nordakademie.struts2.SaveLectureAction" method="saveLecture">
      <result name="input" type="tiles">roomForm</result>
      <result type="tiles">roomForm</result>
    </action>
    <action name="allLectures" class="de.nordakademie.struts2.LoadLectureAction" method="loadLectures">
      <result name="input" type="tiles">roomForm</result>
      <result type="tiles">lecturesList</result>
    </action>
  </package>
</struts>
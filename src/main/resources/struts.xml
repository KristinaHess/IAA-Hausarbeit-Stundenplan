<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE struts PUBLIC '-//Apache Software Foundation//DTD Struts Configuration 2.5//EN'
  'http://struts.apache.org/dtds/struts-2.5.dtd'>
<struts>
  <package name='default' extends="tiles-default">

    <result-types>
      <result-type name="tiles"
                   class="org.apache.struts2.views.tiles.TilesResult"
                   default="true"/>
    </result-types>

    <interceptors>
      <interceptor name="timer" class="de.nordakademie.iaa.helloworld.HelloWorldInterceptor"/>
      <interceptor-stack name="timed-struts-default">
        <interceptor-ref name="timer"/>
        <interceptor-ref name="defaultStack"/>
      </interceptor-stack>
    </interceptors>

    <default-interceptor-ref name="timed-struts-default"/>

    <action name='start'>
      <result>index</result>
    </action>
    <action name='helloWorld' class='de.nordakademie.iaa.helloworld.HelloWorldAction'>
      <result>helloWorld</result>
    </action>
  </package>
</struts>

<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
  <persistence-unit name="db" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>de.nordakademie.common.Person</class>
    <class>de.nordakademie.common.Room</class>
    <class>de.nordakademie.common.Course</class>
    <class>de.nordakademie.common.Lecture</class>
    <properties>
      <property name="hibernate.connection.url" value="jdbc:h2:~/dev/nordakademie/persistenceExample/db;MV_STORE=FALSE;MVCC=FALSE"/>
      <property name="hibernate.connection.driver_class" value="org.h2.Driver"/>
      <property name="hibernate.connection.username" value="bene"/>
      <property name="hibernate.connection.password" value="bene"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
      <property name="hibernate.show_sql" value="false"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.hbm2ddl.auto" value="create"/>
    </properties>
  </persistence-unit>
</persistence>